@using DataLayer.Model_VM
@model List<KullanicilarinDurumlari>

<h2>Kullanıcıların Durumları</h2>

<table class="table">
    <thead>
        <tr>
            <th>Kullanıcı Adı</th>
            <th>Email Onaylı</th>
            <th>Admin</th>
            <th>Yazar</th>
            <th>Kullanıcı</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.UserName</td>
                <td>@item.EmailConfirmed</td>
                <td>@item.IsAdmin</td>
                <td>@item.IsYazar</td>
                <td>@item.IsKullanici</td>
            </tr>
        }
    </tbody>
</table>
